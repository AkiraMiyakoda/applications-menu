<schemalist>
    <enum id="background-color-enum">
        <value nick="Black" value="0" />
        <value nick="Grey" value="1" />
        <value nick="Red" value="2" />
        <value nick="Blue" value="3" />
        <value nick="Green" value="4" />
        <value nick="Orange" value="5" />
        <value nick="Gold" value="6" />
        <value nick="Violet" value="7" />
    </enum>
	<schema path="/desktop/pantheon/slingshot/" id="desktop.pantheon.slingshot" gettext-domain="slingshot">
        <key name="columns" type="i">
            <default>5</default>
            <summary>The default number of columns</summary>
            <description>This value needs to be greater than 5 to be effective.</description>
        </key>
        <key name="rows" type="i">
            <default>3</default>
            <summary>The default number of rows</summary>
            <description>This value needs to be greater than 3 to be effective.</description>
        </key>
        <key name="icon-size" type="i">
            <default>64</default>
            <summary>The default icon size of apps</summary>
            <description>This value manages the size of the icons in Slingshot.</description>
        </key>
        <key name="show-category-filter" type="b">
            <default>false</default>
            <summary>Show the category switcher or not</summary>
            <description>This value handles the category switcher.</description>
        </key>
        <key name="background-color" enum="background-color-enum">
            <default>"Black"</default>
            <summary>The background color of Slingshot</summary>
            <description>Choose your favourite background color.</description>
        </key>
	</schema>
</schemalist>
